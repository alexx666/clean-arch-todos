{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@todos/core": [
        "packages/core/src/index.ts"
      ]
    },
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    ".verdaccio"
  ]
}
