{
	"name": "clean-arch",
	"version": "1.0.0",
	"private": true,
	"description": "Todo app example using clean architecture...sort of.",
	"scripts": {
		"test": "jest --passWithNoTests -c jest.projects.json",
		"test:watch": "npm t -- --watch",
		"clean": "tsc -b --clean tsconfig.build.json",
		"prebuild": "npm run clean",
		"build": "tsc -b tsconfig.build.json",
		"build:watch": "npm run build -- -w",
		"build:docs": "typedoc",
		"registry": "verdaccio -c verdaccio.yml"
	},
	"files": [
		"dist",
		"typings"
	],
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^26.0.22",
		"@types/node": "^16.11.45",
		"jest": "^26.6.3",
		"ts-jest": "^26.5.4",
		"ts-node": "^9.1.1",
		"tslint": "^6.1.3",
		"typedoc": "^0.23.6",
		"typescript": "^4.7.4",
		"verdaccio": "^5.13.1"
	},
	"workspaces": [
		"libs/todos",
		"apps/api",
		"apps/cli"
	]
}
