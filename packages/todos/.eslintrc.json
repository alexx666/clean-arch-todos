{
	"extends": [
		"../../.eslintrc.json"
	],
	"ignorePatterns": [
		"!**/*",
		"**/*.spec.ts"
	],
	"overrides": [
		{
			"env": {
				"es6": true,
				"node": true
			},
			"files": "*.ts",
			"extends": [
				"plugin:@typescript-eslint/recommended",
				"plugin:@typescript-eslint/recommended-requiring-type-checking",
				"prettier"
			],
			"parser": "@typescript-eslint/parser",
			"parserOptions": {
				"project": "tsconfig.json",
				"sourceType": "module"
			},
			"plugins": [
				"eslint-plugin-jsdoc",
				"eslint-plugin-prefer-arrow",
				"@typescript-eslint"
			],
			"rules": {}
		}
	]
}
