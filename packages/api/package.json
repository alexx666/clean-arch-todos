{
	"name": "@alexx666/todo-api",
	"private": true,
	"version": "1.0.0",
	"description": "TODOs Rest API",
	"nx": {
		"tags": [
			"scope:backend",
			"type:app"
		]
	},
	"files": [
		"package.json"
	],
	"scripts": {
		"format": "npx prettier --write src/",
		"lint:fix": "npm run lint -- --fix",
		"lint": "eslint -c .eslintrc.json --ext .ts src/",
		"clean": "tsc -b --clean tsconfig.json",
		"prebuild": "npm run clean",
		"start": "sam local start-api --warm-containers EAGER --env-vars cfn/env.json",
		"build": "tsc -b tsconfig.json && sam build -t cfn/template.yml",
		"deploy": "sam deploy -g",
		"test": "jest --passWithNoTests -c jest.config.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alexx666/clean-arch-todos.git"
	},
	"author": "alexx666",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/alexx666/clean-arch-todos/issues"
	},
	"homepage": "https://github.com/alexx666/clean-arch-todos#readme",
	"devDependencies": {
		"@types/aws-lambda": "^8.10.101",
		"aws-sdk": "^2.1185.0"
	},
	"dependencies": {
		"@alexx666/todos-core": "^1.0.0"
	}
}
