{
	"projectType": "application",
	"sourceRoot": "packages/cli/src",
	"prefix": "packages",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "packages/cli",
				"parallel": false,
				"commands": [
					"tsc -b --clean tsconfig.json",
					"tsc -b tsconfig.json",
					"esbuild build/todos.js --bundle --outfile=dist/todos.js --platform=node --allow-overwrite"
				]
			}
		},
		"start": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "packages/cli",
				"command": "node dist/todos"
			}
		},
		"debug": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "packages/cli",
				"command": "node --inspect dist/todos"
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": [
					"packages/cli/**/*.ts"
				]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": [
				"coverage/packages/cli"
			],
			"options": {
				"jestConfig": "packages/cli/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": [
		"scope:client",
		"type:app"
	],
	"implicitDependencies": [
		"core"
	]
}
