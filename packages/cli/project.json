{
	"projectType": "application",
	"sourceRoot": "packages/cli/src",
	"prefix": "packages",
	"targets": {
		"build": {
			"executor": "@nrwl/esbuild:esbuild",
			"options": {
				"main": "packages/cli/src/todos.ts",
				"tsConfig": "packages/cli/tsconfig.app.json",
				"outputPath": "dist/packages/cli",
				"external": [
					"commander",
					"dotenv"
				],
				"esbuildOptions": {
					"sourcemap": true
				},
				"platform": "node"
			}
		},
		"start": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node dist/packages/cli/todos"
			}
		},
		"debug": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node --inspect dist/packages/cli/todos"
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": [
					"packages/cli/**/*.ts"
				]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": [
				"coverage/packages/cli"
			],
			"options": {
				"jestConfig": "packages/cli/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": [
		"scope:client",
		"type:app"
	],
	"implicitDependencies": [
		"core"
	]
}
